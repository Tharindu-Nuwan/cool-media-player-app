                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Slider>
                              <Label fx:id="lblVolume" text="100%" textFill="WHITE" />
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
