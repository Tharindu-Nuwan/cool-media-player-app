                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="btnPlay" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnPlayOnAction" text="Play">
