         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imgBackground" fitHeight="213.0" fitWidth="213.0" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 75;">
                     <image>
                        <Image url="@../images/background.png" />
